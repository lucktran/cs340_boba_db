{{!-- Create a table --}}
<table id="inventory">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders POSSIBLY HARDCODE SO ITS VISUALLY APPEALING AND NOT VAIRBALES--}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}<th> </th>
        </tr>
    </thead>

   {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the employee_id, name, birthdate (too much info how to cut) address, phone number, inventory_id and store location --}}
        {{#each data}}
        <tr data-value={{this.inventory_id}}>
            <td>{{this.inventory_id}}</td>
            <td>{{this.store_id}}</td>
            <td>{{this.milk_amount}}</td>
            <td>{{this.tea_amount}}</td>
            <td>{{this.boba_amount}}</td>
            <td>{{this.store_location}}</td>
            <td><button onclick="deleteInventory({{this.inventory_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./delete_inventory.js"></script>    
 



{{!-- Form to add a record to the table using AJAX --}}
<h2>Adding Data with AJAX</h2>
<p>To add a new inventory, please select a <strong>store location from the drop down that does not already have an inventory</strong> and add the rest of the info</p>
<form id="add-inventory-form">

    <select name="input-storeID" id="input-storeID">
        <option value="">Select a store</option>
        {{#each stores}}
        <option value="{{this.id}}">{{this.location}}</option>
        {{/each}}
    </select>

    <label for="input-milk">Milk Amount: </label>
    <input type="text" name="input-milk" id="input-milk">
    
    <label for="input-tea">Tea Amount: </label>
    <input type="text" name="input-tea" id="input-tea">

    <label for="input-boba">Boba Amount: </label>
    <input type="text" name="input-boba" id="input-boba">

    <input type="submit">
</form>
<script src="./add_inventory.js"></script>


