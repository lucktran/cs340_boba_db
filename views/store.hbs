{{!-- Create a table --}}
<table id="stores">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders POSSIBLY HARDCODE SO ITS VISUALLY APPEALING AND NOT VAIRBALES--}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}<th> </th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the store_id, location, and franchisee --}}
        {{#each data}}
        <tr data-value={{this.store_id}}>
            <td>{{this.store_id}}</td>
            <td>{{this.location}}</td>
            <td>{{this.franchisee}}</td>
            <td><button onclick="deleteStore({{this.store_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./delete_store.js"></script>    
    
    
